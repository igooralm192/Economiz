<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.igor.projetopoo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_cart"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:roundIcon="@mipmap/ic_launcher_cart_round"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.main.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.category.CategoryActivity" android:screenOrientation="portrait"/>

        <activity android:name=".activity.product.ProductActivity" android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.search.SearchActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


    </application>

</manifest>